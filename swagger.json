  "components": {
    "schemas": {
      "RegisterRequest": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "Vlad"
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "vlad@mail.com"
          },
          "password": {
            "type": "string",
            "format": "password",
            "example": "12345678"
          }
        },
        "required": ["email", "password", "name"]
      },
      "LoginRequest": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "example": "vlad@mail.com"
          },
          "password": {
            "type": "string",
            "example": "12345678"
          }
        },
        "required": ["email", "password"]
      },
